<RegisterContent>:
	radius:[30,30,0,0]
	padding:dp(8),dp(8)
	md_bg_color:1,1,1,1
	ScrollView:
		effect:'StiffScrollEffect'
		padding:dp(20),dp(20)
		MDBoxLayout:
			orientation:'vertical'
			adaptive_height:True
			spacing:dp(35)

			MDBoxLayout:
				orientation:'vertical'
				adaptive_height:True
				spacing:dp(7)

				MDLabel:
					text:'\nEnter account details.\n'
					adaptive_height:True
					halign:'center'
					color:0,0,0,1

				MDTextField:	
					id:reg_user
					hint_text:'Username'				
					size_hint_x:dp(.85)
					pos_hint:{'center_x':.5}
					line_color_normal:0,0,0,1
					mode:'rectangle'
					text_color:0,0,0,.95
					current_hint_text_color:.2,0.5,0.2,1

				MDTextField:
					id:reg_email
					hint_text:'E-mail'				
					size_hint_x:dp(.85)
					pos_hint:{'center_x':.5}
					line_color_normal:0,0,0,1
					mode:'rectangle'
					text_color:0,0,0,.95
					current_hint_text_color:.2,0.5,0.2,1

				MDTextField:
					id:reg_password
					hint_text:'Password'
					mode: "rectangle"
					size_hint_x:dp(.85)
					password:True
					pos_hint:{'center_x':.5}
					line_color_normal:0,0,0,1
					text_color:0,0,0,.95
					current_hint_text_color:.2,0.5,0.2,1

				MDTextField:
					id:reg_comf_password
					hint_text:'Comfirm Password'
					mode: "rectangle"
					size_hint_x:dp(.85)
					password:True
					pos_hint:{'center_x':.5}
					line_color_normal:0,0,0,1
					text_color:0,0,0,.95
					current_hint_text_color:.2,0.5,0.2,1				

			MDBoxLayout:
				adaptive_height:True
				spacing:dp(10)
				pos_hint:{'center_x':.5}
				MDLabel:
					size_hint_x:dp(.1)

				MDRectangleFlatButton:
					text:'Cancel'
					text_color:0,0,0,1
					line_color: 0, 0, 1, 1

					on_release:
						app.root.dismisser()
						app.root.ids.reg.color=0,0,1,1

				MDRectangleFlatButton:
					text:'Send'
					text_color:0,0,0,1
					on_release:root.register() if root.ids.reg_user.text!='' and root.ids.reg_email.text!='' and root.ids.reg_password.text!='' and	root.ids.reg_comf_password.text!='' and root.ids.reg_password.text==root.ids.reg_comf_password.text 		else print('Fill all blanks and passwords must match')
				MDLabel:
					size_hint_x:dp(.1)

